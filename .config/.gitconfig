  branch = false
[pull]
	rebase = true
[fetch]
	prune = true
[diff]
	colorMoved = zebra
[merge]
  conflictstyle = diff3
[interactive]
  diffFilter = delta --color-only
[delta]
  line-numbers = true
  navigate = true  # use n and N to move between diff sections
  side-by-side = true
