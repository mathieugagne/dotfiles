#/usr/bin/env bash

if [ -z "$1" ]; then
  echo "No command number passed"
  exit 2
fi

exists=$(git branch | grep $1 -- 2>/dev/null)

if [ -n "$exists" ]; then
  git branch | grep $1
else
  echo "Branch with ticket number $1 was not found in your local branches"
  exit 2
fi

complete -W "git branch | grep $1" git checkout
